<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CameraActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/topStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/status_bar_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circular_button_background"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to Connect"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvConnectionInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection info"
                    android:textColor="@color/church_light_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Live Indicator -->
            <LinearLayout
                android:id="@+id/liveIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/live_indicator_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/live_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Focus Indicator -->
    <ImageView
        android:id="@+id/focusIndicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_focus_indicator"
        android:visibility="gone"
        app:tint="@color/church_gold" />

    <!-- Advanced Camera Controls Panel -->
    <LinearLayout
        android:id="@+id/cameraControlsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomControlPanel"
        android:layout_marginBottom="8dp"
        android:background="@drawable/controls_panel_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Zoom Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Zoom"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarZoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tvZoomLevel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:text="1.0x"
                android:textColor="@color/church_gold"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Exposure Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Exposure"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarExposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/tvExposureLevel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:text="0"
                android:textColor="@color/church_gold"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Focus and Exposure Lock Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAutoFocus"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/church_gray"
                android:text="AF"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFocusLock"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginHorizontal="4dp"
                android:backgroundTint="@color/church_gray"
                android:text="AF-L"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExposureLock"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/church_gray"
                android:text="AE-L"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="18dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Control Panel -->
    <LinearLayout
        android:id="@+id/bottomControlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/control_panel_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="24dp">

        <!-- Switch Camera Button -->
        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circular_button_background"
            android:contentDescription="Switch Camera"
            android:src="@drawable/ic_switch_camera"
            app:tint="@color/white" />

        <!-- Toggle Controls Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleControls"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/church_blue"
            android:text="Controls"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:cornerRadius="24dp" />

        <!-- Connect/Disconnect Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/church_gold"
            android:minWidth="120dp"
            android:text="Connect"
            android:textColor="@color/church_dark_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/circular_button_background"
            android:contentDescription="Settings"
            android:src="@drawable/ic_settings"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Connection Quality Indicator -->
    <LinearLayout
        android:id="@+id/connectionQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/topStatusBar"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/quality_indicator_background"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivSignalStrength"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_signal_strong"
            app:tint="@color/church_gold" />

        <TextView
            android:id="@+id/tvQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HD"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
