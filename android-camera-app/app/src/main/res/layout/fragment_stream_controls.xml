<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/church_dark_blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Stream Controls"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Platform Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Select Streaming Platforms"
            android:textColor="@color/church_light_gray"
            android:textSize="16sp" />

        <!-- YouTube Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/control_item_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/checkboxYoutube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="@color/red" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_youtube"
                app:tint="@color/red" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Stream to YouTube"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Facebook Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/control_item_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/checkboxFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="@color/blue" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_facebook"
                app:tint="@color/blue" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Stream to Facebook"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Go Live Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoLive"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/roboto_bold"
            android:text="GO LIVE"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <!-- Stream Status Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/info_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Stream Information"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="• Select at least one platform to enable streaming\n• Changes take effect immediately on the main display\n• Stream status is synchronized across all controllers"
                android:textColor="@color/church_light_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
